---
import Base from "@/layouts/Base.astro";
import Hero from "@/components/home/Hero.astro";
import { getMeetupMembers } from "@/lib/getMeetupMembers.ts";

let members;
try {
  members = await getMeetupMembers();
} catch (error) {
  console.error("Failed to fetch meetup members:", error);
  // Fallback gracefully without showing the count if there's an error
}
---

<Base title="London.js Community" members={members}>
  <Hero />
</Base>