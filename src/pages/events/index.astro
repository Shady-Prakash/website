---
import Layout from "../../layouts/Layout.astro";
import Container from "../../components/Container.astro";
import EventCard from "../../components/EventCard.astro";
import { getCollection } from "astro:content";

const allMeetups = await getCollection("meetups");
const pastMeetups = allMeetups
  .filter(meetup => meetup.data.status === "past")
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Past Events | London.js">
  <Container class="py-8 sm:py-12">
    <div class="bg-white border-4 border-[#333333] rounded-3xl shadow-[4px_4px_0_#333333] p-6 mb-8">
      <h1 class="text-3xl sm:text-4xl font-black text-center">Past Events</h1>
      <p class="text-gray-600 text-center mt-4">
        Looking for our next event? Check out our{" "}
        <a 
          href="/" 
          class="text-[#333333] font-bold hover:underline"
        >
          homepage â†’
        </a>
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {pastMeetups.map((meetup) => <EventCard meetup={meetup} />)}
    </div>

    {pastMeetups.length === 0 && (
      <div class="bg-white border-4 border-[#333333] rounded-3xl shadow-[4px_4px_0_#333333] p-6 text-center">
        <p class="text-gray-600">No past events to show yet. Stay tuned for our upcoming events!</p>
      </div>
    )}
  </Container>
</Layout>
