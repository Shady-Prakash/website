---
import Card from "../common/Card.astro";
import Button from "../common/Button.astro";
---

<Card class="mb-8">
  <div class="text-center">
    <h1 class="text-4xl sm:text-5xl font-black mb-6">
      No upcoming events yet
    </h1>
    <p class="text-xl mb-8">
      Join our Meetup group to be notified when we announce our next event!
    </p>
    <div class="flex flex-wrap gap-4 justify-center">
      <Button href="/events">
        View Past Events
      </Button>
      <Button 
        variant="secondary" 
        href="https://www.meetup.com/london-js"
        external
      >
        Join Our Meetup Group
      </Button>
    </div>
  </div>
</Card>