---
import Card from "./Card.astro";

interface Props {
  title: string;
  class?: string;
  cardProps?: {
    padding?: string;
    shadow?: string;
    border?: string;
    rounded?: string;
    class?: string;
  };
}

const { 
  title, 
  class: className = "",
  cardProps = {}
} = Astro.props;
---

<div class={className}>
  <Card 
    padding="p-6" 
    border="border-4 border-[#333333]" 
    rounded="rounded-3xl" 
    shadow="shadow-[4px_4px_0_#333333]"
    {...cardProps}
  >
    <h2 class="text-2xl font-semibold mb-4">{title}</h2>
    <slot />
  </Card>
</div>
