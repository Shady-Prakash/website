---
interface Props {
  sponsors: {
    name: string;
    logo: string;
    url: string;
  }[];
  showSponsoredBy: boolean;
}

const { sponsors, showSponsoredBy = false } = Astro.props;
---

<div class="mt-6">
  { showSponsoredBy && <h4 class="text-sm text-gray-600 font-medium">Sponsored by:</h4> }
  <div class="mt-3 flex flex-wrap gap-3 items-center">
    {
      sponsors.map((sponsor) => (
        <a
          href={sponsor.url}
          target="_blank"
          rel="noopener noreferrer"
          class="group"
        >
          <div class="h-8 flex items-center justify-center p-2 border rounded-lg group-hover:shadow-md transition-shadow">
            <img
              src={sponsor.logo}
              alt={`${sponsor.name} logo`}
              class="h-full w-auto object-contain"
            />
          </div>
        </a>
      ))
    }
  </div>
</div>