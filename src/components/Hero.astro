---
import { getCollection } from "astro:content";
import ReactCountdown from "./Countdown.jsx"
import Map from "./Map.astro";
import Container from "./Container.astro";
import EventCard from "./EventCard.astro";

const meetups = await getCollection("meetups");
const nextMeetup = meetups
  .filter((meetup) => meetup.data.status === "upcoming")
  .sort((a, b) => a.data.date.getTime() - b.data.date.getTime())[0];

const isEventEnded = nextMeetup ? new Date() > new Date(`${nextMeetup.data.date.toISOString().split('T')[0]}T${nextMeetup.data.endTime}`) : true;
---

<Container>
  {
    nextMeetup ? (
      isEventEnded ? (
        <div class="bg-white border-4 border-[#333333] rounded-3xl shadow-[4px_4px_0_#333333] p-8 md:p-12 mb-8">
          <div class="text-center">
            <h1 class="text-4xl sm:text-5xl font-black mb-6">
              Today's event has ended
            </h1>
            <p class="text-xl mb-8">Thank you for joining us! Stay tuned for our next event.</p>
            <div class="flex flex-wrap gap-4 justify-center">
              <a
                href="/events"
                class="inline-block bg-[#f0db4e] px-6 py-3 font-bold border-2 border-[#333333] rounded-xl shadow-[4px_4px_0_#333333] hover:-translate-y-0.5 hover:-translate-x-0.5 hover:shadow-[6px_6px_0_#333333] transition-all"
              >
                View Past Events
              </a>
              <a
                href="https://www.meetup.com/london-js"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block bg-white px-6 py-3 font-bold border-2 border-[#333333] rounded-xl shadow-[4px_4px_0_#333333] hover:-translate-y-0.5 hover:-translate-x-0.5 hover:shadow-[6px_6px_0_#333333] transition-all"
              >
                Join Our Meetup Group
              </a>
            </div>
          </div>
        </div>
      ) : (
        <>
          <div class="bg-white border-4 border-[#333333] rounded-3xl shadow-[4px_4px_0_#333333] p-8 md:p-12 mb-8">
            <div class="flex flex-col sm:flex-row gap-6 sm:gap-8 items-center justify-center">
              <h1 class="text-4xl sm:text-5xl font-black text-center sm:text-left">
                Join us for
                <span class="text-[#333333]">{nextMeetup.data.title}!</span>
              </h1>
              <a
                href={nextMeetup.data.meetupUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="group flex items-center gap-2 bg-[#f0db4e] px-6 py-3 font-bold border-2 border-[#333333] rounded-xl shadow-[4px_4px_0_#333333] hover:-translate-y-0.5 hover:-translate-x-0.5 hover:shadow-[6px_6px_0_#333333] transition-all whitespace-nowrap"
              >
                RSVP NOW
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="transition-transform duration-200 group-hover:translate-x-1"
                >
                  <path d="M5 12h14" />
                  <path d="m12 5 7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
            <EventCard meetup={nextMeetup} />
            <Map
              location={`${nextMeetup.data.location.venue}, ${nextMeetup.data.location.address}`}
            />
          </div>

          <ReactCountdown
            client:load
            targetDate={nextMeetup.data.date}
            targetTime={nextMeetup.data.startTime}
            endTime={nextMeetup.data.endTime}
            location={`${nextMeetup.data.location.venue}, ${nextMeetup.data.location.address}`}
          />
        </>
      )
    ) : (
      <div class="bg-white border-4 border-[#333333] rounded-3xl shadow-[4px_4px_0_#333333] p-8 md:p-12 mb-8">
        <div class="text-center">
          <h1 class="text-4xl sm:text-5xl font-black mb-6">
            No upcoming events yet
          </h1>
          <p class="text-xl mb-8">
            Join our Meetup group to be notified when we announce our next event!
          </p>
          <div class="flex flex-wrap gap-4 justify-center">
            <a
              href="/events"
              class="inline-block bg-[#f0db4e] px-6 py-3 font-bold border-2 border-[#333333] rounded-xl shadow-[4px_4px_0_#333333] hover:-translate-y-0.5 hover:-translate-x-0.5 hover:shadow-[6px_6px_0_#333333] transition-all"
            >
              View Past Events
            </a>
            <a
              href="https://www.meetup.com/london-js"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block bg-white px-6 py-3 font-bold border-2 border-[#333333] rounded-xl shadow-[4px_4px_0_#333333] hover:-translate-y-0.5 hover:-translate-x-0.5 hover:shadow-[6px_6px_0_#333333] transition-all"
            >
              Join Our Meetup Group
            </a>
          </div>
        </div>
      </div>
    )
  }
</Container>
